<div class="jumbotron center">
  <h1>WCMC Easter Egg Hunt</h1>
  <h3>There are a bunch of eggs hidden around the library. Find an egg and use the 'Found Egg' button below to enter your name and record your time!</h3>
  <%= link_to 'Found an Egg!', new_found_egg_path, class: 'btn btn-lg btn-success' %>
</div>

<% flash.each do |name, msg| %>
  <%= content_tag :div, :class => "alert alert-#{ name == :error ? "danger" : "success" } alert-dismissable" do %>
    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
    <%= msg %>
  <% end %>
<% end %>

<div class="col-lg-8 col-lg-offset-2 center list-group">
  <% @found_eggs.each do |egg| %>
    <div class="list-group-item">
      <h3 class="text-success">Egg found by <%= egg.name %> in <%= distance_of_time_in_words(Competition.last.created_at, egg.created_at, true) %></h3>
    </div>
  <% end %>
</div>
